# Production Environment Configuration
NODE_ENV=production

# Database Configuration
DATABASE_URL=postgresql://postgres:${POSTGRES_PASSWORD}@postgres:5432/supplychain_lens?schema=public
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=supplychain_lens
POSTGRES_USER=postgres

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your_redis_password_here

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_here_minimum_32_characters
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_here_minimum_32_characters
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# ML Service Configuration
ML_SERVICE_URL=http://ml-service:8000
ML_SERVICE_TIMEOUT=300000

# File Upload
MAX_FILE_SIZE=50MB
UPLOAD_PATH=/app/uploads

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_here

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# External APIs
SENTINEL_HUB_URL=https://services.sentinel-hub.com
PLANET_API_URL=https://api.planet.com
GOOGLE_EARTH_ENGINE_URL=https://earthengine.googleapis.com

# Frontend Configuration
VITE_API_URL=https://api.yourdomain.com
VITE_ML_API_URL=https://ml.yourdomain.com
VITE_WS_URL=wss://api.yourdomain.com
VITE_APP_NAME=SupplyChainLens
VITE_APP_VERSION=1.0.0
